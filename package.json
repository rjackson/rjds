{
  "version": "0.4.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": "^18.1.0 || ^18.0.2",
    "styled-components": "^5.3.5",
    "tailwindcss": "^3.0.24"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@rjackson/rjds",
  "author": "Rob Jackson",
  "module": "dist/rjds.esm.js",
  "size-limit": [
    {
      "path": "dist/rjds.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/rjds.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.0",
    "@types/styled-components": "^5.1.25",
    "autoprefixer": "^10.4.5",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "postcss": "^8.4.12",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "size-limit": "^7.0.8",
    "styled-components": "^5.3.5",
    "tailwindcss": "^3.0.24",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^3.9.10"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  }
}
